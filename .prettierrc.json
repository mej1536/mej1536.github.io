{
	"$schema": "https://json.schemastore.org/prettierrc",
	"bracketSameLine": true,
	"printWidth": 180,
	"semi": false,
	"singleQuote": false,
	"singleAttributePerLine": false,
	"trailingComma": "es5",
	"useTabs": true,
	"vueIndentScriptAndStyle": false,

	"overrides": [
		{
			"files": ["*.js", "*.jsx"],
			"options": {
				"semi": true,
				"tabWidth": 2,
				"useTabs": false
			}
		},
		{
			"files": ["*.html", "*.css"],
			"options": {
				"tabWidth": 4
			}
		}
	]
}
